@model AlfrescoWorklog.Models.Project

@{
    ViewBag.Title = "New Project";
}

<h2>Create</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm("CreateProject","Worklog")) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Project</legend>
        <div class="editor-label">
            PROJECT NAME
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.name)
            @Html.ValidationMessageFor(model => model.name)
        </div>

        <div class="editor-label">
            PROJECT DESCRIPTION
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.description)
            @Html.ValidationMessageFor(model => model.description)
        </div>

        <div class="editor-label">
            ALFRESCO USER
        </div>
        <div class="editor-field">
            @Html.DropDownList("userID", String.Empty)
            @Html.ValidationMessageFor(model => model.userID)
        </div>

        <div class="editor-label">
            ALFRESCO SANDPIT
        </div>
        <div class="editor-field">
            @Html.DropDownList("sandpitID", String.Empty)
            @Html.ValidationMessageFor(model => model.sandpitID)
        </div>
        <p>
            <input type="submit" formmethod="post" value="Create New Project" />
        </p>
    </fieldset>
}
